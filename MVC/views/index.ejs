<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header></header>
    <main>
      <div class="container my-5 p-5 bg-black">
        <h1 class="text-center text-white pb-5">ADD</h1>
        <div class="row justify-content-center align-items-center g-2">
          <form action="/add" method="post">
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control"
                name="id"
                id=""
                placeholder=""
              />
              <label for="formId1">ID</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                name="name"
                id="formId1"
                placeholder=""
              />
              <label for="formId1">Name</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control"
                name="age"
                id="formId1"
                placeholder=""
              />
              <label for="formId1">Age</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="row justify-content-center align-items-center p-5 g-2">
          <h1 class="text-center text-white pb-3">Table</h1>
          <div class="table-responsive">
            <table class="table table-primary">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Age</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% op.forEach((db)=>{ %>
                <tr>
                  <td><%= db.id %></td>
                  <td><%= db.name %></td>
                  <td><%= db.age %></td>
                  <td>
                    <a
                      name=""
                      id=""
                      class="btn btn-primary"
                      href="/edit/<%= db.id %>"
                      role="button"
                      >Edit</a
                    >
                  </td>
                  <td>
                    <a
                      name=""
                      id=""
                      class="btn btn-primary"
                      href="/delete/<%= db.id %>"
                      role="button"
                      onclick='return confirm("Do you want to delete ?");'
                      >Delete</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
